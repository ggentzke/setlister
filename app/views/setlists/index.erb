<h1>Listing Setlists</h1>

<table class='table table-condensed'>
  <tr>
    <th>Title</th>
    <th>Band</th>
    <th>Duration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @setlists.each do |setlist| %>
  <tr>
    <td><%= setlist.title %></td>
    <td><%= setlist.band.name %></td>
    <td><%= setlist.duration %></td>
    <td><%= link_to 'Show', setlist %></td>
    <td><%= link_to 'Edit', edit_setlist_path(setlist) %></td>
    <td><%= link_to 'Destroy', setlist, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

